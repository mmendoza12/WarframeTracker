<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/trackerImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="launchTracker"
        app:srcCompat="@drawable/warframe_blue"/>

    <TextView
        android:id="@+id/trackerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tracker"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/borderTextView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:gravity="center"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/marketImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:onClick="launchMarket"
        app:srcCompat="@drawable/warframe_green"/>

    <TextView
        android:id="@+id/marketTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/market"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="28sp"/>

</LinearLayout>